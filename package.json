    "@tabler/icons-react": "^3.36.0",
    "@tailwindcss/vite": "^4.1.18",
    "dayjs": "^1.11.19",
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "i18next": "^25.7.3",
    "jspdf": "^3.0.4",
